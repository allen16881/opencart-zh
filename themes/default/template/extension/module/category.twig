<div class="list-group">
	{% for category in categories %}
		{% if category.category_id == category_id %} 
		<a href="{{ category.href }}" class="list-group-item active">{% if category.count %}<span class="badge">{{ category.count }}</span>{% endif %}{{ category.name }}</a> 
		{% if category.children %}
			{% for child in category.children %}
			{% if child.category_id == child_id %}
			<a href="{{ child.href }}" class="list-group-item active">{% if child.count %}<span class="badge">{{ child.count }}</span>{% endif %}&nbsp;&nbsp;&nbsp;- {{ child.name }}</a> 
			{% else %} 
			<a href="{{ child.href }}" class="list-group-item">{% if child.count %}<span class="badge">{{ child.count }}</span>{% endif %}&nbsp;&nbsp;&nbsp;- {{ child.name }}</a>
			{% endif %}
			{% endfor %}
		{% endif %}
		{% else %}
		<a href="{{ category.href }}" class="list-group-item">{% if category.count %}<span class="badge">{{ category.count }}</span>{% endif %}{{ category.name }}</a>
		{% endif %}
	{% endfor %}
</div>
