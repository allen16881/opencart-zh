{% if reviews %}
<div class="review-list">
	{% for review in reviews %}
	<div class="review-item">
		<div class="user-image">
			<img src="{{ review.avatar }}" />
		</div>
		<div class="review-info">
			<span class="user-name">{{ review.author }}</span>
			<span class="time">{{ review.date_added }}</span>
			<span class="rating">
				{% for i in 1..5 %}
				{% if review.rating < i %}<i class="icon-star"></i>{% else %}<i class="icon-star-fill"></i>{% endif %}
				{% endfor %}
			</span>
		</div>
		<div class="review-content">
			<p class="review-text">{{ review.text }}</p>
			{% if review.replies %}
			<div class="review-reply">
				{% for reply in review.replies %}
					<div class="reply-item{% if not reply.customer_id %} official{% endif %}">
						<div class="reply-image">
							<img src="{{ reply.avatar }}" />
						</div>
						<div class="reply-info">
							<span class="reply-name">{{ reply.author }}{% if not reply.customer_id %}<span class="label label-success">{{ text_official_reply }}</span>{% endif %}</span>
							<span class="reply-time">{{ reply.date_added }}</span>
						</div>
						<div class="reply-content">
							<p class="reply-text">{{ reply.text }}</p>
						</div>
					</div>
				{% endfor %}
			</div>
			{% endif %}
		</div>
	</div>
	{% endfor %}
</div>
<div class="text-right">{{ pagination }}</div>
{% else %}
<p class="no-data-box"><i class="icon-information"></i><span class="text">{{ text_no_reviews }}</span></p>
{% endif %} 