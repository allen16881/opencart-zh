{{ header }}
<div class="site-breadcrumb">
	<div class="container">
		<ul class="breadcrumb">
			{% for breadcrumb in breadcrumbs %}
			<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
			{% endfor %}
		</ul>
	</div>
</div>
<div class="page-main">
	<div class="container">
		<div class="post-wrapper">
			<div class="post-header">
				<h1>{{ heading_title }}</h1>
			</div>
			<div class="post-content">
				{{ content }}
			</div>
		</div>
	</div>
</div>
{{ footer }}