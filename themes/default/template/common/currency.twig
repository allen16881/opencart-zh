{% if currencies|length > 1 %}
<ul class="currency-selector nav navbar-nav">
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      {% for currency in currencies %}{% if currency.code == code %}<i>{{ currency.symbol_left }}</i><span>{{ currency.title }}</span>{% endif %}{% endfor %} <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      {% for currency in currencies %}
      <li><a href="#" data-code="{{ currency.code }}"><span>{{ currency.symbol_left }}</span> <span>{{ currency.title }}</span></a></li>
      {% endfor %}
    </ul>
  </li>
</ul>
<form action="{{ action }}" method="post" class="hidden" id="form-currency">
  <input type="hidden" name="code" value="" />
  <input type="hidden" name="redirect" value="{{ redirect }}" />
</form>
{% endif %}
