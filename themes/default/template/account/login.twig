{{ header }}
<div class="site-breadcrumb">
	<div class="container">
		<ul class="breadcrumb hide">
			{% for breadcrumb in breadcrumbs %}
			<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
			{% endfor %}
		</ul>
	</div>
</div>
<div class="page-main" id="content">
	<div class="container">
		<div class="row">
			<div class="col-sm-4 col-sm-offset-4">
				<div class="well login-form">
					{% if success %}
					<div class="alert alert-success alert-dismissible"><i class="icon-checkmark"></i> {{ success }}</div>
					{% endif %}
					{% if error_warning %}
					<div class="alert alert-danger alert-dismissible"><i class="icon-warning"></i> {{ error_warning }}</div>
					{% endif %}
					<form action="{{ action }}" method="post" enctype="multipart/form-data">
						<div class="form-group">
							<label class="control-label" for="input-email">{{ entry_email }}</label>
							<input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
						</div>
						<div class="form-group form-password">
							<label class="control-label" for="input-password">{{ entry_password }}</label>
							<input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control" />
							<a href="{{ forgotten }}" class="forgotten">{{ text_forgotten }}</a>
						</div>
						<input type="submit" value="{{ button_login }}" class="btn btn-primary btn-lg btn-block" />
						{% if redirect %}
						<input type="hidden" name="redirect" value="{{ redirect }}" />
						{% endif %}
					</form>
					<div class="links">
						<a href="{{ register }}">{{ text_register_account }}</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{{ footer }}
