<!DOCTYPE html>
<html dir="{{ direction }}" lang="{{ lang }}">
<head>
<meta charset="UTF-8" />
<title>{{ title }}{{ page_title_append }}</title>
<base href="{{ base }}" />
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}
{% if keywords %}
<meta name="keywords" content="{{ keywords }}" />
{% endif %}
<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
<script src="view/javascript/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
<script src="view/javascript/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<script src="view/javascript/jquery/datetimepicker/moment/moment.min.js" type="text/javascript"></script>
<script src="view/javascript/jquery/datetimepicker/moment/moment-with-locales.min.js" type="text/javascript"></script>
<script src="view/javascript/jquery/datetimepicker/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
<link href="view/image/icon.png" rel="icon" />
<link href="view/stylesheet/bootstrap.min.css" type="text/css" rel="stylesheet" media="screen" />
<link href="view/stylesheet/icons.css" type="text/css" rel="stylesheet" media="screen" />
<link href="view/javascript/jquery/datetimepicker/bootstrap-datetimepicker.min.css" type="text/css" rel="stylesheet" media="screen" />
<link href="view/stylesheet/common.css" type="text/css" rel="stylesheet" media="screen" />
{% for style in styles %}
<link type="text/css" href="{{ style.href }}" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
{% if values %}
<script type="text/javascript">
var $cnoc = {
{% for value in values %}
  "{{ value.code }}" : "{{ value.value }}"{% if not loop.last %},{% endif %}
{% endfor %}
}
</script>
{% endif %}
<script src="view/javascript/common.js" type="text/javascript"></script>
{% for script in scripts %}
<script type="text/javascript" src="{{ script }}"></script>
{% endfor %}
</head>
<body>
<div id="container">
<header id="header" class="navbar navbar-static-top">
  <div class="container-fluid">
    <div id="header-logo" class="navbar-header"><a href="{{ home }}" class="navbar-brand">
    Opencart Plus
    </a></div>
    <a href="#" id="button-menu" class="hidden-md hidden-lg"><span class="icon-menu"></span></a>
    {% if logged %}
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="{{ image }}" alt="{{ fullname }}" title="{{ username }}" id="user-profile" class="img-circle" /><span class="hidden-xs">{{ fullname }} </span><i class="icon-chevron-down"></i></a>
        <ul class="dropdown-menu dropdown-menu-right">
          <li><a href="{{ profile }}"><i class="icon-user"></i> {{ text_profile }}</a></li>
          <li role="separator" class="divider"></li>
          <li class="dropdown-header">{{ text_store }}</li>
          {% for store in stores %}
          <li><a href="{{ store.href }}" target="_blank">{{ store.name }}</a></li>
          {% endfor %}
          <li role="separator" class="divider"></li>
          <li class="dropdown-header">{{ text_help }}</li>
          <li><a href="http://www.cnopencart.com/" target="_blank"><i class="icon-cnoc"></i> {{ text_homepage }}</a></li>
          <li role="separator" class="divider"></li>
          <li><a href="{{ logout }}"><i class="icon-exit"></i> {{ text_logout }}</a></li>
        </ul>
      </li>
    </ul>
    {% endif %}
  </div>
</header>
